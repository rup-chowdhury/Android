<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/contact_add_background"
    android:weightSum="1"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:weightSum="2"
        android:orientation="vertical">
    <EditText
        android:id="@+id/edt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="30dp"
        android:layout_weight="0.3"
        android:background="@drawable/rounded_corner"
        android:hint="Name"
        android:paddingLeft="10dp"
        android:textColorHint="#C9276484"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/edt_email"
        android:layout_weight="0.3"
        android:background="@drawable/rounded_corner"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="30dp"
        android:paddingLeft="10dp"
        android:inputType="textEmailAddress"
        android:hint="E-mail"
        android:textColorHint="#C9276484"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/edt_phone"
        android:layout_weight="0.3"
        android:background="@drawable/rounded_corner"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="30dp"
        android:paddingLeft="10dp"
        android:inputType="number"
        android:hint="Number"
        android:textColorHint="#C9276484"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"/>

    <Button
        style="@style/Widget.Material3.Button.ElevatedButton"
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.37"
        android:layout_marginHorizontal="90dp"
        android:paddingLeft="40dp"
        android:paddingRight="60dp"
        app:cornerRadius="10dp"
        android:drawableLeft="@drawable/icon_save"
        android:backgroundTint="#1C5A75"
        android:text="Save"
        android:textColor="@color/white"
        android:textSize="21sp"
        android:fontFamily="@font/roboto_light"
        android:textStyle="bold"
        />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1">

        <Button
            android:id="@+id/btn_all_contact"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="top"
            android:layout_marginHorizontal="50dp"
            android:backgroundTint="#1C5A75"
            android:fontFamily="@font/roboto_light"
            android:text="Show all contacts"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:cornerRadius="5dp" />

    </LinearLayout>
</LinearLayout>